<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head') %>
        <link rel="stylesheet" href="/styles/index.css">
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="container">

    <header>
        <%- include ('../partials/header') %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>This is great</h1>
            <p>Welcome to templating using EJS</p>
            <h3 id="errorMessage" style="color: red">
                <%= errorMessage%>
            </h3>
            <p>
                <%= tagline %>
            </p>
            <form method="get" action="/home/search" class="d-flex">
                <div class="w-50">
                    <input type="text" class="form-control-5 searchInput" id="searchInput" name="searchInput"
                        placeholder="Search">
                    <button class="btn searchBtn" type="submit">search</button>
                    <p class="err" style="color: red; font-size: small;"></p>
                </div>
            </form>

            <div>
                <button class="showAddDrink">Add Drink</button>
                <form method="post" action="/home/drinks/create" class="d-flex formAdd" hidden>
                    <h3>Create drinks</h3>
                    <h4 style="color: red;"></h4>
                    <div class="w-50">
                        <input type="text" class="form-control-5 drinkID" id="drinkID" name="drinkID"
                            placeholder="drink ID">
                        <p class="errID" style="color: red; font-size: small;"></p>
                    </div>
                    <div class="w-50">
                        <input type="text" class="form-control-5 name" id="name" name="name" placeholder="name">
                        <p class="errName" style="color: red; font-size: small;"></p>
                    </div>
                    <div class="w-50">
                        <input type="text" class="form-control-5 drunkness" id="drunkness" name="drunkness"
                            placeholder="drunkness">
                        <p class="errDrunkness" style="color: red; font-size: small;"></p>
                    </div>
                    <div>
                        <button class="backBtn" type="button">Back</button>
                        <button class="addBtn" type="submit">Add</button>
                    </div>
                </form>
            </div>

            <% if (typeof deleteMessage !=='undefined' ) {%>
                <h2 style="color: blue; text-align: center;">Delete success</h2>
                <% }%>

                    <% if (typeof updateMessage !=='undefined' ) {%>
                        <h2 style="color: green; text-align: center;">Update success</h2>
                        <% }%>

                            <h2 class="drinks">Drinks</h2>

                            <% drinks.forEach(function(drink) { %>

                                <div class="list-drinks-content">
                                    <div class="drink-child">
                                        <div>
                                            <input type="checkbox" id="<%= drink.drinkID%>" name="<%= drink.drinkID%>"
                                                value="<%= drink.drinkID%>" class="checkboxSelected"
                                                onclick="myfunction()">
                                            <label for="<%= drink.drinkID%>" name="<%= drink.drinkID%>" class="infor">
                                                <%= drink.name %> - <%= drink.drunkness %>
                                            </label>
                                        </div>

                                        <div class="btn-function">
                                            <button type="submit" class="btn-edit"
                                                onclick="sendDataToPopUp('<%= drink.drinkID %>','<%= drink.name %>','<%= drink.drunkness %>')">Edit</button>
                                            <!-- <button type="button" class="btn-edit">Edit</button> -->
                                            <a href="/home/delete/<%=drink.drinkID %>">
                                                <button type="button" class="btn-delete">Delete</button>
                                            </a>


                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <div style="display: flex; justify-content: center; align-items: center;">
                                        <button type="button" class="btnDeleteSeclect" hidden>Delete</button>
                                    </div>
        </div>

        <div id="popup1" class="overlay">
            <div class="popup">
                <h2 style="text-align: center;">Update Drink</h2>
                <a class="close" href="">&times;</a>
                <div class="content">
                    <form method="post" action="/home/update" class="d-flex formUpdate">
                        <h4 style="color: red;"></h4>
                        <div class="w-50" hidden>
                            <input type="text" class="form-control-5 drinkIdUpdate" id="drinkIdUpdate"
                                name="drinkIdUpdate" placeholder="drink ID">
                            <p class="errIdUpdate" style="color: red; font-size: small;"></p>
                        </div>
                        <div class="w-50">
                            <input type="text" class="form-control-5 nameUpdate" id="nameUpdate" name="nameUpdate"
                                placeholder="name" value="">
                            <p class="errNameUpdate" style="color: red; font-size: small;"></p>
                        </div>
                        <div class="w-50">
                            <input type="text" class="form-control-5 drunknessUpdate" id="drunknessUpdate"
                                name="drunknessUpdate" placeholder="drunkness">
                            <p class="errDrunknessUpdate" style="color: red; font-size: small;"></p>
                        </div>
                        <div style="display: flex; justify-content: center; align-items: center;">
                            <button class="updateBtn btn btn-success" type="submit">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </main>

    <footer>
        <%- include ('../partials/footer') %>
    </footer>

    <script src="/js/home.js"></script>
</body>

</html>